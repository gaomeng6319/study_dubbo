<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签-->
    <dubbo:application name="consumer" owner="wying"/>

    <!--dubbo这个服务所要暴露的服务地址所对应的注册中心-->
    <!--点对点的方式-->
    <!--<dubbo:registry address="N/A" />-->
    <!--使用zookeeper注册中心  check="true"  启动时检查服务是否可用  false不检查-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" check="true"/>

    <!--生成一个远程服务的调用代理-->
    <!--点对点方式-->
   <!-- <dubbo:reference id="rpcService"
                     interface="com.wying.rpc.RpcService"
                     url="dubbo://10.0.34.136:20880/com.wying.rpc.RpcService"/>-->

    <!--使用zookeeper注册中心 url保存在zookeeper节点上了，不在需要配置 -->
    <dubbo:reference id="rpcService"
                     interface="com.wying.rpc.RpcService"
                    />

</beans>